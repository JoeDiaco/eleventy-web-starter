        <a href="#main" class="sr-only focus:not-sr-only focus:p-3 text-white focus:inline-block focus:absolute bg-black top-2 left-2">Skip to main content</a>

        <header>
            <nav class="bg-gray-50 border-gray-200 px-3 lg:px-6 py-3 lg:py-4 border-b">
                <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
                    <a href="{{ site.url | url }}" class="flex items-center">
